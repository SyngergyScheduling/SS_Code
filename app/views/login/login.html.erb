<div id=title>
  <h1>Synergy Scheduling</h1>
</div>
<%= render 'shared/navigation' %>
<div id=login class=form>
  <% if session[:login_fail] %>
    <p style="color:white">Invalid username or password</p>
  <% end %>
  <%= form_for :login, url: {action: 'submit'} do |f| %>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.submit :login %>
  <% end %>
</div>
